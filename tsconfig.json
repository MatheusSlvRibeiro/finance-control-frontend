{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,

		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@data/*": ["src/data/*"],
			"@hooks/*": ["src/hooks/*"],
			"@pages/*": ["src/pages/*"],
			"@styles/*": ["src/styles/*"],
			"@utils/*": ["src/utils/*"],
			"@appTypes/*": ["src/types/*"],
			"@services/*": ["src/services/*"],
			"@mocks/*": ["src/mocks/*"],
			"@context/*": ["src/context/*"],
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.mts"],
	"exclude": ["node_modules", ".next", "next-env.d.ts"]
}
